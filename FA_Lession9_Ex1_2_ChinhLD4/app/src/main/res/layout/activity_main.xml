<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_linearLayout_button_margin"
        android:gravity="center">

        <Button
            android:id="@+id/btnReadContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_button_read_contact_text" />

        <Button
            android:id="@+id/btnWriteContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_button_write_contact_margin"
            android:text="@string/main_button_write_contact_text" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_frameLayout_margin">
    </FrameLayout>
</LinearLayout>